{
    "type": "object",
    "required": [
        "isbn",
        "amazon_url",
        "author",
        "language",
        "pages",
        "publisher",
        "title",
        "year"
    ],
    "properties": {
        "isbn": {
            "type": "string",
            "minLength": 1
        },
        "amazon_url": {
            "type": "string",
            "pattern": "^https?://.+"
        },
        "author": {
            "type": "string",
            "minLength": 1
        },
        "language": {
            "type": "string",
            "minLength": 1
        },
        "pages": {
            "type": "integer",
            "minimum": 1
        },
        "publisher": {
            "type": "string",
            "minLength": 1
        },
        "title": {
            "type": "string",
            "minLength": 1
        },
        "year": {
            "type": "integer",
            "minimum": 0,
            "maximum": 2100
        }
    },
    "additionalProperties": false
}